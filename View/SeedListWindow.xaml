<Window x:Class="SudokuPuzzle.View.SeedListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:SudokuPuzzle.ViewModel"
        Title="SeedListWindow" Height="500" Width="400">
    <Grid Background="FloralWhite">
        <TextBlock Text="List of Seeds" FontSize="20" HorizontalAlignment="Center" Margin="0,8,0,0"></TextBlock>
        <Grid Height="400" Width="325" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox ItemsSource="{Binding SeedList}"/>
        </Grid>
    </Grid>
</Window>
